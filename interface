    syspath = ('/home/brentegani/Desktop/sma-group-e-project','/home/brentegani/Desktop/sma-group-e-project/galaxies/','/home/brentegani/Desktop/sma-group-e-project/python-progressbar/','/software/amuse/amuse-13.0-python3-fedora31/lib/python3.7/site-packages','/software/local/lib64/python3.7/site-packages','/usr/lib64/python37.zip','/usr/lib64/python3.7','/usr/lib64/python3.7/lib-dynload','/home/brentegani/.local/lib/python3.7/site-packages','/usr/lib64/python3.7/site-packages','/usr/lib64/python3.7/site-packages/mpich','/usr/lib/python3.7/site-packages')
